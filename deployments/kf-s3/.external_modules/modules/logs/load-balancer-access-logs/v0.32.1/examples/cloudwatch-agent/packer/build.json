{
  "variables": {
    "aws_region": "us-east-1",
    "github_auth_token": "{{env `GITHUB_OAUTH_TOKEN`}}",
    "gruntwork_installer_version": "v0.0.21",
    "module_aws_montoring_branch": "",
    "instance_type": "t2.micro"
  },
  "builders": [{
    "ami_name": "gruntwork-cloudwatch-agent-example-ubuntu2004-{{isotime | clean_resource_name}}",
    "ami_description": "An Ubuntu 20.04 AMI that shows an example of a simple 'Hello, World' server that sends metrics to CloudWatch and forwards syslog entries to CloudWatch Logs using the CloudWatch Agent.",
    "instance_type": "{{user `instance_type`}}",
    "region": "{{user `aws_region`}}",
    "type": "amazon-ebs",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "architecture": "x86_64",
        "name": "ubuntu/images/hvm-ssd/ubuntu-focal-20.04-amd64-server-*",
        "block-device-mapping.volume-type": "gp2",
        "root-device-type": "ebs"
      },
      "owners": ["099720109477"],
      "most_recent": true
    },
    "ssh_username": "ubuntu",
    "name": "ubuntu-20-build"
  },{
    "ami_name": "gruntwork-cloudwatch-log-aggregation-example-ubuntu1804-{{isotime | clean_resource_name}}",
    "ami_description": "An Ubuntu 18.04 AMI that shows an example of a simple 'Hello, World' server that sends metrics to CloudWatch and forwards syslog entries to CloudWatch Logs using the CloudWatch Agent.",
    "instance_type": "{{user `instance_type`}}",
    "region": "{{user `aws_region`}}",
    "type": "amazon-ebs",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "architecture": "x86_64",
        "name": "ubuntu/images/hvm-ssd/ubuntu-bionic-18.04-amd64-server-*",
        "block-device-mapping.volume-type": "gp2",
        "root-device-type": "ebs"
      },
      "owners": ["099720109477"],
      "most_recent": true
    },
    "ssh_username": "ubuntu",
    "name": "ubuntu-18-build"
  },{
    "ami_name": "gruntwork-cloudwatch-log-aggregation-example-amazon-linux-{{isotime | clean_resource_name}}",
    "ami_description": "An Amazon Linux AMI that shows an example of a simple 'Hello, World' server that sends metrics to CloudWatch and forwards syslog entries to CloudWatch Logs using the CloudWatch Agent.",
    "instance_type": "{{user `instance_type`}}",
    "region": "{{user `aws_region`}}",
    "type": "amazon-ebs",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "architecture": "x86_64",
        "name": "*amzn-ami-hvm-*",
        "block-device-mapping.volume-type": "gp2",
        "root-device-type": "ebs"
      },
      "owners": ["amazon"],
      "most_recent": true
    },
    "ssh_username": "ec2-user",
    "name": "amazon-linux-build"
  },{
    "ami_name": "gruntwork-cloudwatch-log-aggregation-example-amazon-linux-2-{{isotime | clean_resource_name}}",
    "ami_description": "An Amazon Linux 2 AMI that shows an example of a simple 'Hello, World' server that sends metrics to CloudWatch and forwards syslog entries to CloudWatch Logs using the CloudWatch Agent.",
    "instance_type": "{{user `instance_type`}}",
    "region": "{{user `aws_region`}}",
    "type": "amazon-ebs",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "architecture": "x86_64",
        "name": "*amzn2-ami-hvm-*",
        "block-device-mapping.volume-type": "gp2",
        "root-device-type": "ebs"
      },
      "owners": ["amazon"],
      "most_recent": true
    },
    "ssh_username": "ec2-user",
    "name": "amazon-linux-2-build"
  },{
    "ami_name": "gruntwork-cloudwatch-log-aggregation-example-centos-{{isotime | clean_resource_name}}",
    "ami_description": "A CentOS AMI that shows an example of a simple 'Hello, World' server that sends metrics to CloudWatch and forwards rsyslog entries to CloudWatch Logs using the CloudWatch Agent.",
    "instance_type": "{{user `instance_type`}}",
    "region": "{{user `aws_region`}}",
    "type": "amazon-ebs",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "architecture": "x86_64",
        "name": "*CentOS Linux 7 x86_64 HVM EBS ENA*",
        "product-code": "aw0evgkw8e5c1q413zgy5pjce",
        "root-device-type": "ebs"
      },
      "owners": ["679593333241"],
      "most_recent": true
    },
    "ssh_username": "centos",
    "ssh_pty" : true,
    "name": "centos-build"
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "echo 'Sleeping for 30 seconds to give the AMIs enough time to initialize (otherwise, packages may fail to install).'",
      "sleep 30"
    ]
  },{
    "type": "shell",
    "inline": "curl -Ls https://raw.githubusercontent.com/gruntwork-io/gruntwork-installer/master/bootstrap-gruntwork-installer.sh | bash /dev/stdin --version {{user `gruntwork_installer_version`}}"
  },{
    "type": "shell",
    "inline": [
      "gruntwork-install --module-name 'bash-commons' --tag 'v0.1.3' --repo https://github.com/gruntwork-io/bash-commons",
      "gruntwork-install --module-name 'agents/cloudwatch-agent' --module-param aws-region={{user `aws_region`}} --tag '>v0.0.1' --branch '{{user `module_aws_montoring_branch`}}' --repo https://github.com/gruntwork-io/module-aws-monitoring"
    ],
    "environment_vars": [
      "GITHUB_OAUTH_TOKEN={{user `github_auth_token`}}"
    ]
  }]
}
